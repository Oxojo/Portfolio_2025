---
// NavButtons.astro
const Links = [
    { name: 'About', href: '/about' },
    { name: 'Works', href: '/works' },
    { name: 'Articles', href: '/articles' } 
]
---

<div class="nav-container">
    {Links.map((link) => (
        <a href={link.href} class="nav-button">
            <span>{link.name}</span>
        </a>
    ))}
</div>

<style>
    .nav-container {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-top: 40px;
    }
    @keyframes fadeIn {
        to: {
            opacity: 1;
        }
    }

    @media screen and (max-width: 1000px) {
        .nav-container {
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 40px;
            margin-top: 40px;
        }
    }

    .nav-button {
        width: 300px;
        height: 300px;
        background-color: #cc213e;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: white;
        font-family: Jua;
        font-size: 48px;
        font-style: normal;
        font-weight: 400;
        line-height: 160%;

        opacity: 0;
        transform: translateY(20px) scale(0.9);
        animation: popIn 1s cubic-bezier(0.5, 1.2, 0.64, 1) forwards;
        animation-delay: 1.6s;
    }
    .nav-button:hover {
        box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.25);
    }

    @keyframes popIn {
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
</style>